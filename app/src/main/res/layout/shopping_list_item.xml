<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minHeight="?android:attr/listPreferredItemHeight"
              android:gravity="center_vertical"
              android:id="@+id/list_item_shopping_list_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/product_name_textview"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/product_quantity_textview"
        android:layout_below="@+id/product_name_textview"
        android:layout_alignParentStart="true"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dash"
        android:layout_below="@+id/product_name_textview"
        android:layout_toEndOf="@+id/product_quantity_textview"
        android:id="@+id/product_dash_textview"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/product_unit_textview"
        android:layout_below="@+id/product_name_textview"
        android:layout_toEndOf="@+id/product_dash_textview"
        android:inputType="text"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_shoppingcart_checkbox"
        android:background="@drawable/shopping_cart_checkbox"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:checked="false"
        android:button="@null"/>

</RelativeLayout>